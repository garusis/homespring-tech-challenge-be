{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "tsconfig.json",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "env": {
    "node": true,
    "jest": true
  },
  "extends": [
    "airbnb-base",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "root": true,
  "rules": {
    "import/extensions": "off",
    "no-console": "error",
    "no-void": "off",
    "class-methods-use-this": "warn"
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
